<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:text="Create New Incident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="0.02"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center_horizontal" />

        <TextView
            android:text="Incident Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="0.02"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="25dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Date"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button11" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Time"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button23"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Involved People"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button24"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Photo"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button25"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Audio"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button26"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Initial Action"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button27"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Respond to action"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_marginLeft="25dp"
                android:textSize="18sp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button28"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:text="Evaluation"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_weight="0.04"
            android:textSize="20sp"
            android:layout_marginLeft="25dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_weight="0.11"
            android:minHeight="138dp" />

        <Button
            android:text="GET LOCATION"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/button5"
            android:elevation="0dp"
            android:layout_weight="0.02"
            android:layout_marginTop="10dp" />

        <Button
            android:text="Save Session"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/button4"
            android:elevation="0dp"
            android:layout_weight="0.02"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</ScrollView>