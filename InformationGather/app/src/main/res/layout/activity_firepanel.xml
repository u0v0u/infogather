<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:text="Create New Incident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="0.02"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Incident No."
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
            <Button
                android:text="Get incident"
                android:layout_width="match_parent"
                android:id="@+id/button14"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView6"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Date"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
            <Button
                android:text="Select Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button11"
                android:layout_marginRight="50dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/textView5"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:height="35dp"
                android:background="@mipmap/check_mark"
                android:layout_marginTop="5dp"
                android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Time"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
                <Button
                    android:text="Select time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button23"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView7"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Involved People"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
                <Button
                    android:text="Edit people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button24"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView8"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Photo"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
                <Button
                    android:text="upload photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button25"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView11"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Audio"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
                <Button
                    android:text="upload audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button26"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView12"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Initial Action"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_marginLeft="25dp"
                android:textSize="20sp" />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
                <Button
                    android:text="view and edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button27"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView14"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Respond to Action"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_marginLeft="25dp"
                android:textSize="18sp" />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
                <Button
                    android:text="view and edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button28"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView16"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.02">
            <TextView
                android:text="Evaluation"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginLeft="25dp"
                android:textSize="18sp" />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.02">
                <Button
                    android:text="view and edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button15"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView17"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:height="35dp"
                    android:background="@mipmap/check_mark"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:text="GET LOCATION"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/button5"
            android:elevation="0dp"
            android:layout_weight="0.02"
            android:layout_marginTop="10dp" />

        <Button
            android:text="Save Session"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/button4"
            android:elevation="0dp"
            android:layout_weight="0.02"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</ScrollView>