<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="Create New Incident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="28sp" />

        <TextView
            android:text="Incident Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            android:textSize="18sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:numStars="3"
            android:layout_marginTop="45dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:text="Priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="55dp"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textSize="20sp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:id="@+id/textView23"
            android:layout_marginLeft="25dp"
            android:textSize="20sp" />

        <TextView
            android:text="Audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="195dp"
            android:id="@+id/textView24"
            android:textSize="20sp"
            android:layout_marginLeft="200dp" />

        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textSize="20sp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="125dp" />

        <TextView
            android:text="People Involed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:id="@+id/textView22"
            android:textSize="20sp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:text="Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="195dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_marginTop="260dp"
            android:id="@+id/editText6"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="top" />

        <Button
            android:text="Get Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_alignBottom="@+id/button5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" />

        <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:background="@android:drawable/ic_menu_set_as"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="80dp"
            android:minWidth="50dp"
            android:maxWidth="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:background="@android:drawable/presence_away"
            android:minWidth="50dp"
            android:maxWidth="50dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="110dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:background="@android:drawable/presence_audio_online"
            android:minWidth="50dp"
            android:maxWidth="50dp"
            android:layout_alignBaseline="@+id/textView24"
            android:layout_alignBottom="@+id/textView24"
            android:layout_alignLeft="@+id/button8"
            android:layout_alignStart="@+id/button8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:background="@android:drawable/presence_video_online"
            android:minWidth="50dp"
            android:maxWidth="50dp"
            android:layout_below="@+id/textView22"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:background="@android:drawable/sym_def_app_icon"
            android:minWidth="50dp"
            android:maxWidth="50dp"
            android:layout_below="@+id/textView17"
            android:layout_alignRight="@+id/button5"
            android:layout_alignEnd="@+id/button5" />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button2"
            android:layout_centerHorizontal="true"
            android:id="@+id/datePicker2"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>